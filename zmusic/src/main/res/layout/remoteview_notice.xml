<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#000">

    <ImageView
        android:id="@+id/remote_cover"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/cover_logo"
        android:scaleType="centerCrop" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_toRightOf="@id/remote_cover"
        android:id="@+id/relativeLayout">

        <!--<TextView
            android:id="@+id/remote_name_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="算什么男人 - 周杰伦"
            android:textColor="#ffffff"
            android:textSize="8sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"/ -->

        >

        <ImageView
            android:id="@+id/remote_play"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/icon_play"
            android:scaleType="centerCrop"
            android:background="#00000000"
            android:layout_marginBottom="8dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/remote_last"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/icon_last"
            android:scaleType="centerCrop"
            android:background="#00000000"
            android:layout_marginBottom="8dp"
            android:layout_toLeftOf="@id/remote_play"
            android:layout_marginRight="56dp"
            android:layout_alignParentBottom="true"/>

        <ImageView
            android:id="@+id/remote_next"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/icon_next"
            android:scaleType="centerCrop"
            android:background="#00000000"
            android:layout_marginBottom="8dp"
            android:layout_toRightOf="@id/remote_play"
            android:layout_marginLeft="56dp"
            android:layout_alignParentBottom="true"/>



    </RelativeLayout>



</RelativeLayout>